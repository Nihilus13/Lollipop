<resources>

    <style name="AppBaseTheme" parent="android:Theme.Material">
        <item name="android:windowContentTransitions">true</item>
        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">@transition/anim_view_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/anim_view_transition</item>
    </style>

    <style name="MainActivity" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/red</item>
        <item name="android:colorPrimary">@android:color/transparent</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
        <item name="android:colorAccent">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/purple</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SecondActivity" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/orange</item>
        <item name="android:colorPrimary">@color/yellow</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
        <item name="android:colorAccent">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/blue</item>
        <item name="android:statusBarColor">@color/purple</item>
    </style>

    <style name="ThirdActivity" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/green</item>
        <item name="android:colorPrimary">@color/yellow</item>
        <item name="android:colorPrimaryDark">@android:color/transparent</item>
        <item name="android:colorAccent">@color/orange</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/orange</item>
    </style>

</resources>